
<body style="background-color: #2C325F;">
<div class="container pena-index" id="lista-de-penas" style="color: white;">
<br>
  <h1>Índice de peñas</h1>

  <hr>
  {{#each allPenas}}
  <img src={{img}} alt="logo pena" class="imagen_logo">
  <h4>{{name}}</h4>
  <p>{{country}}</p>
  <p>{{city}}</p>
  <p>{{site}}</p>
  <a href="/pena/{{_id}}" class="btn btn-sm btn-light" >Ver detalles</a>
  <br><br><br>
  {{/each }}

</div>
</body>